  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "bunyan": "^1.8.15",
    "express": "^4.17.1",
    "mongodb": "^4.2.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1"
  }
}
